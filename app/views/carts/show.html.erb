<% @title = t(:current_cart) + " - " + t(:secret_shop) %>
<h1><%= t(:current_cart) %></h1>
<h4><%= t(:total_price) + ": " + number_to_currency(@cart.totalprice_dollars) %></h4>
<h4><%= t(:list_of_items_inside_cart) %></h4>
<br>
<table class="table">
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:price) %></th>
    <th><%= t(:quantity) %></th>
  </tr>
<% @cart.items.each do |item| %>
  <tr>
    <th><%= link_to item.name, item %></th>
    <th><%= number_to_currency(item.price_dollars) %></th>
    <th><%= @cart.manifests(true).where(item_id: item.id).first.quantity %></th>
  </tr>
<% end %>
</table>

<%= link_to "Place Order", place_order_cart_path, class: "btn btn-primary" %>

