<% @title = "Secret Shop" %>
<div class = "page-header">
  <h1>Welcome to the Secret Shop!</h1>


<ul class="actions">
<% users_only do %>
  <li>
    <%= link_to "Go to cart", cart_path(@cart), class: "btn btn-success" %>
  </li>
<% end %>

<% signed_users_only do %>
  <li>
    <%= link_to "Go to placed orders", carts_path, class: "btn btn-info" %>
  </li>
<% end %>

<% shopkeepers_only do %>
  <li>
    <%= link_to fa_icon("plus") + " New Item", new_shopkeeper_item_path, class: "btn btn-success" %>
  </li>
<% end %>
</ul>
</div>
<br>
<br>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Price</th>
  </tr>
  <% @items.each do |f| %>
    <tr>
      <td><%= link_to f.name, f %></td>
      <td><%= number_to_currency(f.price_dollars) %></td>
    </tr>
  <% end %>
</table> 
