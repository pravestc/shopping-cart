<h1>New Item</h1>

<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %>
        prohibited this item from being saved:</h2>

      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </p>

  <p>
    <%= f.label :legend %><br>
    <%= f.text_area :legend %><br>
  </p>


  <p>
    <%= f.label :effect %><br>
    <%= f.text_area :effect %><br>
  </p>


  <p>
    <%= f.label :stats %><br>
    <%= f.text_area :stats %><br>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %><br>
  </p>
  <%= f.submit %>
<% end %>
