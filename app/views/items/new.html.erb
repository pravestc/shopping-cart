<h1>New Item</h1>

<%= form_for(@item) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </p>

  <p>
    <%= f.label :legend %><br>
    <%= f.text_area :legend %><br>
  </p>


  <p>
    <%= f.label :effect %><br>
    <%= f.text_area :effect %><br>
  </p>


  <p>
    <%= f.label :stats %><br>
    <%= f.text_area :stats %><br>
  </p>

  <%= f.submit %>
<% end %>
