<% @title = @item.name + " - " + t(:item) + " - " + t(:secret_shop) + " Secret Shop" %>
<div class="page-header">
  <h1><%= @item.name %></h1>
<ul class="actions">
<% users_only do %>
 <li>
    <%= link_to t(:go_to_cart), cart_path(@cart), class: "btn btn-success" %>
  </li>
<% end %>
  <li>
    <%= link_to t(:go_back_to_item_list), items_path, class: "btn btn-info" %>
  </li>
</ul>

</div>

<div class="bd-example">
 <ul class="actions2">
    <li><% shopkeepers_only do %>
    <%= link_to t(:delete_item), shopkeeper_item_path(@item), method: :delete,
    data: { confirm: t(:delete_confirmation) } %>
<% end %></li>
<% users_only do %>
  <li>
    <%= link_to t(:add_item_to_cart), add_to_cart_item_path, class: "btn btn-primary" %>
  </li>
  <li>
    <%= link_to t(:remove_item_from_cart), remove_from_cart_item_path, class: "btn btn-danger" %>
  </li>
<% end %>
  </ul>

  <%= image_tag @item.image_url.to_s %>
<dl>
  
  <dt><%= t(:price) %></dt>
  <dd><%= number_to_currency(@item.price_dollars) %></dd>
  <dt><%= t(:legend) %></dt>
  <dd><%= @item.legend %></dd>
  <dt><%= t(:effect) %></dt>
  <dd><%= @item.effect %></dd>
  <dt><%= t(:stats) %></dt>
  <dd><%= @item.stats %></dd>
</dl>

</div>
